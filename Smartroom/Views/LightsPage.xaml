                        TabIndex="26"
                        OnColor="#AC162C"
                        Grid.Column="0"
                        Grid.Row="0"
                        AutomationProperties.Name="Bathroom Toggle"
                        IsToggled="{Binding BathroomLightOnOff, Mode=TwoWay}"
