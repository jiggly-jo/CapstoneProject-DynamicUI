            <Frame
                Grid.Column="4"
                Grid.Row="4"
                HasShadow="False"
                CornerRadius="40"
                OutlineColor="LightGray"
                AutomationProperties.IsInAccessibleTree="False"
                BackgroundColor="#f8f8f8"
