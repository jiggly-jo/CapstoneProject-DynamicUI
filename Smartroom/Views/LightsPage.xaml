                        Grid.Row="0"
                        Grid.RowSpan="4"
                        Percent=".20"
                        Margin = "2"
                        CornerRadius="100"/>

                    <Utilities:FillBar
                        Grid.Column="0"
                        Grid.Row="1"
                        Grid.RowSpan="3"
                        BackgroundColor="#e6e6e6"
                        FillColor="#f8f8f8"
                        Value="{Binding Entrance}"
                        CornerRadius="80"/>

                    <Switch
                        OnColor="#AC162C"
                        Grid.Column="0"
                        Grid.Row="0"
                        AutomationProperties.IsInAccessibleTree="True"
                        TabIndex="20"
                        AutomationId="EntranceToggle"
                        AutomationProperties.Name="Entrance Toggle"
                        IsToggled="{Binding EntranceLightOnOff, Mode=TwoWay}"
                        Toggled="HandleEntranceToggle"
                        VerticalOptions="CenterAndExpand"
                        HorizontalOptions="CenterAndExpand"
                        x:Name="EntranceToggle"/>

                    <ImageButton
                        Grid.Column="0"
                        Grid.Row="1"
                        AutomationProperties.Name="Entrance Up"                                          
                        AutomationProperties.IsInAccessibleTree="True"
                        TabIndex="21"
                        x:Name="EntranceUpButton"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand"
                        Command="{Binding EntranceLightsUpCommand}"
                        Source="{Utilities:ImageResource Smartroom.Icons.ArrowCircleUp.png}"/>

                    <Utilities:Sublabel
                        Grid.Column="0"
                        Grid.Row="2"
                        x:Name="EntranceValueLabel"
                        TextColor="#414042"
                        x:FieldModifier="Public"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand"
                        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Start"
                        FontFamily="SofiaProRegular"
                        AutomationProperties.IsInAccessibleTree="False"
                        Text="{Binding Entrance}"/>

                    <ImageButton
                        Grid.Column="0"
                        Grid.Row="3"
                        AutomationProperties.IsInAccessibleTree="True"
                        TabIndex="22"
                        AutomationProperties.Name="Entrance Down"
                        x:Name="EntranceDownButton"
                        Command="{Binding EntranceLightsDownCommand}"
                        Source="{Utilities:ImageResource Smartroom.Icons.ArrowCircleDown.png}"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand"/>

                </Grid>
            </Frame>

            <Utilities:Sublabel
                Grid.Column="2"
                Grid.Row="3"
                x:Name="ReadLabel"
                Text="Read"
                TextColor="#414042"
                AutomationProperties.IsInAccessibleTree="False"/>

            <Frame
                Grid.Column="2"
                Grid.Row="4"
                HasShadow="False"
                CornerRadius="40"
                OutlineColor="LightGray"                        
                BackgroundColor="#f8f8f8"
                Padding="0"
                x:Name="ReadingFrame"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                AutomationProperties.IsInAccessibleTree="False">

                <Grid
                    AutomationProperties.IsInAccessibleTree="False"
                    RowSpacing="0"
            
                    ColumnSpacing="0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="34*"/>
                        <RowDefinition Height="12*"/>
                        <RowDefinition Height="34*"/>
                    </Grid.RowDefinitions>

                    <Utilities:Stage3FrameVert
                        Grid.Column="0"
                        Grid.Row="0"
                        Grid.RowSpan="4"
                        Percent=".20"
                        Margin = "2"
                        CornerRadius="100"/>

                    <Utilities:FillBar
                        Grid.Column="0"
                        Grid.Row="1"
                        Grid.RowSpan="3"
                        BackgroundColor="#e6e6e6"
                        FillColor="#f8f8f8"
                        Value="{Binding Reading}"
                        CornerRadius="80"/>

                    <Switch
                        OnColor="#AC162C"
                        Grid.Column="0"
                        Grid.Row="0"
                        AutomationProperties.IsInAccessibleTree="True"
                        TabIndex="23"
                        AutomationId="ReadingToggle"
                        AutomationProperties.Name="Reading Toggle"
                        IsToggled="{Binding ReadingLightOnOff, Mode=TwoWay}"
                        Toggled="HandleReadingToggle" 
                        VerticalOptions="CenterAndExpand"
                        HorizontalOptions="CenterAndExpand"
                        x:Name="ReadingToggle"/>

                    <ImageButton
                        Grid.Column="0"
                        Grid.Row="1"
                        AutomationProperties.Name="Reading Up"
                        AutomationProperties.IsInAccessibleTree="True"
                        TabIndex="24"
                        x:Name="ReadingUpButton"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand"
                        Command="{Binding ReadingLightsUpCommand}"
                        Source="{Utilities:ImageResource Smartroom.Icons.ArrowCircleUp.png}"/>

                    <Utilities:Sublabel
                        Grid.Column="0"
                        Grid.Row="2"
                        TextColor="#414042"
                        x:Name="ReadingValueLabel"
                        x:FieldModifier="Public"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand"
                        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Start"
                        FontFamily="SofiaProRegular"
                        AutomationProperties.IsInAccessibleTree="False"
                        Text="{Binding Reading}"/>

                    <ImageButton
                        Grid.Column="0"
                        Grid.Row="3"
                        AutomationProperties.Name="Reading Down"
                        AutomationProperties.IsInAccessibleTree="True"
                        TabIndex="25"
                        x:Name="ReadingDownButton"
                        Command="{Binding ReadingLightsDownCommand}"
                        Source="{Utilities:ImageResource Smartroom.Icons.ArrowCircleDown.png}"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand"/>

                </Grid>
            </Frame>

            <Utilities:Sublabel
                Grid.Column="3"
                Grid.Row="3"
                x:Name="BathLabel"
                TextColor="#414042"
                Text="Bath"
                AutomationProperties.IsInAccessibleTree="False"/>

            <Frame
                AutomationProperties.IsInAccessibleTree="False"
                Grid.Column="3"
                Grid.Row="4"
                HasShadow="False"
                CornerRadius="40"
                OutlineColor="LightGray"                         
                BackgroundColor="#f8f8f8"
                Padding="0"
                x:Name="BathFrame"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">

                <Grid
                    AutomationProperties.IsInAccessibleTree="False"
                    RowSpacing="0"
                    ColumnSpacing="0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="34*"/>
                        <RowDefinition Height="12*"/>
                        <RowDefinition Height="34*"/>
                    </Grid.RowDefinitions>

                    <Utilities:Stage3FrameVert
